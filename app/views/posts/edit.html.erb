<h1>Editing Book</h1>
<%= form_for(@post) do |f| %>
	<h4>Title</h4>
	 <div class="box">
		<%= f.text_field :title %>
	 </div>
	<h4>Body</h4>
	 <div class="box">
	 	<%= f.text_area :body %>
	 </div>
	 <div class="box">
	 	<%= f.submit "Update Book " %>
	 </div>
	 <%= link_to "Show", post_path(@post.id), class: "show_#{@post.id}" %>
	 <%= link_to "Back", root_path, class: "back" %>

<% end %>